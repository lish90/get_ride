<h1>Cars#index</h1>
<p>Find me in app/views/cars/index.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col">
      <ul>
      <%@cars.each do |car|  %>
        <div class="card-category">
          <%= image_tag "yellow_car.jpeg", class: "homepage_car" %>
          <div class="col">
          <li class='list'> <%= link_to car.model, car_path(car),class: "btn btn-ghost" %>
          <%= car.make%> <%= car.rate%>
          </li>
          <li class='list'><%= link_to 'Book Car', new_car_booking_path(car),class: "btn btn-ghost" %></li>
          </div>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>



